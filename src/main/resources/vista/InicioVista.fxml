<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.controlador.InicioControlador">
   <center>
      <AnchorPane id="AnchorPane" styleClass="mainFxmlClass">
         <children>
            <ImageView fx:id="viewFiecImg" fitHeight="200.0" fitWidth="200.0" layoutX="100.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../recursos/fiecImg.png" />
               </image></ImageView>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="110.0" layoutY="241.0" text="Usted deberá pensar en un animal y yo trataré de adivinarlo.">
               <font>
                  <Font name="Berlin Sans FB" size="15.0" />
               </font>
            </Label>
            <ImageView fx:id="viewLogoImg" fitHeight="200.0" fitWidth="200.0" layoutX="300.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../recursos/espolOldImg.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Empecemos!!">
               <font>
                  <Font name="Britannic Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="btnContinuar" mnemonicParsing="false" onAction="#switchToJuego" text="Continuar" />
         </children>
         <padding>
            <Insets bottom="8.0" left="6.0" right="6.0" top="8.0" />
         </padding>
      </VBox>
   </bottom>
   <top>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Bienvenido a Genio Politécnico" textAlignment="CENTER">
               <font>
                  <Font name="Britannic Bold" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="8.0" left="6.0" right="6.0" top="8.0" />
         </padding>
      </VBox>
   </top>
</BorderPane>
